<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<script>
  document.body.style.overflow = 'hidden';
  window.addEventListener('load', function() {
    // ローディング画面の処理
    setTimeout(function() {
      if (typeof window.hideNNLoader === 'function') {
        window.hideNNLoader();
      }
      
      document.body.style.overflow = 'auto';

      // 2. ローダーが消えるタイミングでAOS（スクロールアニメ）を初期化・開始
      //    offset: 発火するスクロール位置（ピクセル）
      //    duration: アニメーションの時間（ミリ秒）
      //    once: 一度だけアニメーションするかどうか
      AOS.init({
        offset: 100,
        duration: 800,
        easing: 'ease-out-cubic',
        once: true 
      });
      
    }, 2500); // ローディング待ち時間
  });
</script>

